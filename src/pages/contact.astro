---
import Layout from '../layouts/Layout.astro';

const socialLinks = [
  { name: 'GitHub', url: 'https://github.com/anikdascodes', icon: 'github' },
  { name: 'LinkedIn', url: 'https://www.linkedin.com/in/anikdascodes/', icon: 'linkedin' },
  { name: 'Kaggle', url: 'https://www.kaggle.com/anik0012', icon: 'kaggle' },
  { name: 'X', url: 'https://x.com/AnikCodes', icon: 'twitter' },
];

// Kolkata coordinates
const latitude = 22.5726;
const longitude = 88.3639;
---

<Layout title="Contact - Anik Das">
  <section class="py-12">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-8">Contact Me</h1>
      
      <div class="space-y-8">
        <!-- Social Links -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm p-6">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Connect With Me</h2>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
            {socialLinks.map(({ name, url, icon }) => (
              <a
                href={url}
                target="_blank"
                rel="noopener noreferrer"
                class="flex flex-col items-center space-y-2 text-gray-600 dark:text-gray-400 hover:text-primary dark:hover:text-primary transition-colors group"
              >
                <div class="p-4 bg-gray-50 dark:bg-gray-700 rounded-full group-hover:bg-primary/10 transition-colors">
                  <svg class="h-8 w-8" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    {icon === 'github' && (
                      <path
                        fill-rule="evenodd"
                        d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                        clip-rule="evenodd"
                      />
                    )}
                    {icon === 'linkedin' && (
                      <path
                        fill-rule="evenodd"
                        d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                        clip-rule="evenodd"
                      />
                    )}
                    {icon === 'kaggle' && (
                      <path
                        d="M18.825 23.859c-.022.092-.117.141-.281.141h-3.139c-.187 0-.351-.082-.492-.248l-5.178-6.589-1.448 1.374v5.111c0 .235-.117.352-.351.352H5.505c-.236 0-.354-.117-.354-.352V.353c0-.233.118-.353.354-.353h2.431c.234 0 .351.12.351.353v14.343l6.203-6.272c.165-.165.33-.246.495-.246h3.239c.144 0 .236.06.285.18.046.149.034.255-.036.315l-6.555 6.344 6.836 8.507c.095.104.117.208.07.358"
                      />
                    )}
                    {icon === 'twitter' && (
                      <path
                        d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
                      />
                    )}
                  </svg>
                </div>
                <span class="text-sm font-medium">{name}</span>
              </a>
            ))}
          </div>
        </div>

        <!-- Location -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm p-6">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Location</h2>
          <p class="text-gray-600 dark:text-gray-400 mb-6">
            Based in Kolkata, West Bengal, India<br />
            Open to remote opportunities
          </p>
          
          <!-- Map -->
          <div class="relative w-full h-[400px] rounded-lg overflow-hidden">
            <div id="map" class="w-full h-full"></div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<script is:inline>
  // Load Leaflet CSS
  document.head.insertAdjacentHTML(
    'beforeend',
    '<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />'
  );

  // Load Leaflet JS
  const script = document.createElement('script');
  script.src = 'https://unpkg.com/leaflet@1.9.4/dist/leaflet.js';
  script.integrity = 'sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=';
  script.crossOrigin = '';
  
  script.onload = function() {
    // Initialize map after Leaflet is loaded
    const map = L.map('map').setView([22.5726, 88.3639], 12);
    
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      maxZoom: 19,
      attribution: ' OpenStreetMap contributors'
    }).addTo(map);
    
    L.marker([22.5726, 88.3639])
      .addTo(map)
      .bindPopup('Kolkata, West Bengal')
      .openPopup();
  };
  
  document.head.appendChild(script);
</script>

<style>
  /* Fix for Leaflet map controls in dark mode */
  :global(.leaflet-control) { filter: invert(0) !important; }
  :global(.dark .leaflet-control) { filter: invert(1) hue-rotate(180deg) !important; }
  :global(.dark .leaflet-control-attribution) { filter: invert(1) hue-rotate(180deg) !important; }
  :global(.dark .leaflet-tile) { filter: brightness(0.6) invert(1) contrast(3) hue-rotate(200deg) saturate(0.3) brightness(0.7) !important; }
</style>
